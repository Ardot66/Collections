TEMP = Temp
BIN = Bin
SOURCE = Source
TESTS = Tests

NAME = Collections
LIST_NAME = List
CARRAY_NAME = CArray
TESTS_NAME = Tests

All: ClearBin Collections Test

ClearBin:
	(cd $(BIN) && rm -f lib$(NAME).dll $(TESTS_NAME).exe)

Collections:
	gcc -fPIC -c $(SOURCE)/$(CARRAY_NAME).c -o $(TEMP)/$(CARRAY_NAME).o
	gcc -fPIC -c $(SOURCE)/$(LIST_NAME).c -o $(TEMP)/$(LIST_NAME).o
	gcc -s -shared $(TEMP)/$(CARRAY_NAME).o $(TEMP)/$(LIST_NAME).o -o $(BIN)/lib$(NAME).dll

Test:
	gcc -c $(TESTS)/$(TESTS_NAME).c -o $(TEMP)/$(TESTS_NAME).o
	gcc -s -L$(BIN) -l$(NAME) $(TEMP)/$(TESTS_NAME).o -o $(BIN)/$(TESTS_NAME).exe
	$(BIN)/$(TESTS_NAME).exe